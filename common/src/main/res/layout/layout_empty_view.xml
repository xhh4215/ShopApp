<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <com.example.common.ui.view.IconFontTextView
        android:id="@+id/empty_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:textSize="@dimen/sp_40" />

    <TextView
        android:id="@+id/empty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/color_565"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="title"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哎呀妈呀 啥也没有 ！咋整 要不刷新试试？"
            android:textColor="@color/color_9b9"
            android:textSize="@dimen/sp_16"
            android:visibility="visible"
            tools:gravity="center" />

        <com.example.common.ui.view.IconFontTextView
            android:id="@+id/empty_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:gravity="center"
            android:text="@string/if_detail"
            android:textColor="@color/color_298"
            android:textSize="@dimen/sp_20" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/empty_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:backgroundTint="@color/color_dd2"
        android:text="刷新"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:cornerRadius="@dimen/dp_8"
        tools:visibility="visible" />

</LinearLayout>